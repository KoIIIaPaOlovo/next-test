{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "../node_modules",
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.d.ts",
    "support/**/*.d.ts",
    "support/index.d.ts"
  ]
}